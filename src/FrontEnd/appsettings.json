{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "route1": {
                "ClusterId": "cluster1",
                "Match": {
                    "Path": "/app1/{*any}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/app1" }
                ]
            },
            "route2": {
                "ClusterId": "cluster2",
                "Match": {
                    "Path": "/app2/{*any}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/app2" }
                ]
            }
        },
        "Clusters": {
            "cluster1": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5170/"
                    }
                }
            },
            "cluster2": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5117"
                    }
                }
            }
        }
    }
}